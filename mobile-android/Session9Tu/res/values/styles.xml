<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="CustomTheme" parent="@android:style/Theme.Holo.Light" tools:targetApi="11">
	    <item name="android:actionButtonStyle">@style/CustomActionButtonStyle</item>
		<item name="android:windowActionBar">true</item>
		<item name="android:actionMenuTextAppearance">@style/CustomActionMenuTextAppearance</item>
	</style>

	<style name="CustomActionButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton" tools:targetApi="11">
		<item name="android:minWidth">0dip</item>
		<item name="android:paddingLeft">0dip</item>
		<item name="android:paddingRight">0dip</item>
	</style>

	<style name="CustomActionMenuTextAppearance" parent="@android:style/Widget.Holo.Light.ActionBar" tools:targetApi="11">
       <item name="android:textSize">5sp</item>
       <item name="android:textStyle">normal</item>
       <item name="android:textAllCaps" tools:targetApi="14">false</item>
    </style>

</resources>
