<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/button_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Take photo"
        android:onClick="start" />
    
    <Button
        android:id="@+id/button_photo_intent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_photo"
        android:text="Take photo with an Intent"
        android:onClick="start" />

    <Button
        android:id="@+id/button_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_photo_intent"
        android:text="Play music"
        android:onClick="start" />
    
    <ImageButton
        android:id="@+id/cancel_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_music"
        android:layout_toRightOf="@+id/button_music"
        android:src="@drawable/ic_navigation_cancel"
        android:onClick="start" />

    <Button
        android:id="@+id/button_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_music"
        android:text="Play video"
        android:onClick="start" />

</RelativeLayout>
